{
  "name": "v1.0",
  "version": "1.0.0",
  "description": "Playwright automation suite for Indigo UAT.",
  "main": "index.js",
  "scripts": {
    "test": "npm run allure:full_report",
    "test:allure": "npx playwright test --reporter=line,allure-playwright %*",
    "test:chrome": "playwright test --project=chromium",
    "test:debug": "npx playwright test --debug",
    "install:browser": "npx playwright install",
    "test:report": "npx playwright show-report",
    "allure:generate": "allure generate allure-results --clean",
    "allure:open": "allure open",
    "report:allure": "npm run allure:generate && npm run allure:open",
    "allure:full_report": "npm run test:allure && npm run report:allure",
    
  "test:one": "npm run test:allure -- %* && npm run report:allure %*"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/indigo-uat/v1.0.git"
  },
  "keywords": [
    "playwright",
    "qa",
    "automation",
    "allure"
  ],
  "author": "Adeolu Ogungbesan",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/indigo-uat/v1.0/issues"
  },
  "homepage": "https://gitlab.com/indigo-uat/v1.0#readme",
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.8.1",
    "allure-playwright": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "install": "^0.13.0",
    "node-fetch": "^2.6.9",
    "npm": "^9.6.1",
    "ts-md5": "^1.3.1",
    "unique-username-generator": "^1.1.3"
  }
}
